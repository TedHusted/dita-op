<plugin>
	<extension point="org.eclipse.wst.xml.core.catalogContributions">
		<catalogContribution
			id="org.dita_op.dita.catalogContribution">
			<public id="org.dita_op.dita.dtd.map"
				publicId="-//OASIS//DTD DITA Map//EN" uri="dtd/map.dtd"
				webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/map.dtd" />
			<public id="org.dita_op.dita.dtd.bookmap"
				publicId="-//OASIS//DTD DITA BookMap//EN" uri="dtd/bookmap.dtd"
				webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/bookmap.dtd" />
			<public id="org.dita_op.dita.dtd.topic"
				publicId="-//OASIS//DTD DITA Topic//EN" uri="dtd/topic.dtd"
				webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/topic.dtd" />
			<public id="org.dita_op.dita.dtd.concept"
				publicId="-//OASIS//DTD DITA Concept//EN" uri="dtd/concept.dtd"
				webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/concept.dtd" />
			<public id="org.dita_op.dita.dtd.task"
				publicId="-//OASIS//DTD DITA Task//EN" uri="dtd/task.dtd"
				webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/task.dtd" />
			<public id="org.dita_op.dita.dtd.reference"
				publicId="-//OASIS//DTD DITA Reference//EN" uri="dtd/reference.dtd"
				webURL="http://docs.oasis-open.org/dita/v1.1/CD01/dtd/reference.dtd" />
	        <system id="org.dita_op.dita.dtd.ditaval"
	            systemId="ditaval.dtd"
	            uri="dtd/ditaval.dtd" />
		</catalogContribution>
	</extension>
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type base-type="org.eclipse.core.runtime.xml"
			id="org.dita_op.dita" name="%DITAContentType.name">
		</content-type>
		<content-type base-type="org.dita_op.dita"
			file-extensions="dita" id="org.dita_op.dita.topic"
			name="%TopicContentType.name">
		</content-type>
		<content-type base-type="org.dita_op.dita"
			file-extensions="ditamap" id="org.dita_op.dita.map"
			name="%MapContentType.name">
		</content-type>
      <content-type
            base-type="org.dita_op.dita"
            file-extensions="ditaval"
            id="org.dita_op.dita.processingProfile"
            name="%ProcessingProfileContentType.name">
      </content-type>
	</extension>
</plugin>
